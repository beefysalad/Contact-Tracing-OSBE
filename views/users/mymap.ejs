<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script>
    let latitude,longitude //VALUES FOR MAP
    //VALUES FOR INPUT FORMS
    const map_api_key = document.querySelector('.map_api_key').innerHTML
    const lat = document.querySelector('#latitude') 
    const long = document.querySelector('#longitude')
    const address = document.querySelector('#coordress')
    function showPosition(position){
      
      const geocodeService = L.esri.Geocoding.geocodeService({
            apikey: map_api_key // replace with your api key - https://developers.arcgis.com
        });
      
        if(lat.value === '' && long.value === ''){
            lat.value = position.coords.latitude
            long.value = position.coords.longitude
            
            
            latitude = position.coords.latitude
            longitude = position.coords.longitude
            geocodeService.reverse().latlng([latitude,longitude]).run(function(error,result){
            if(error){
                return
            }
            address.value  = result.address.Match_addr
            // L.marker(result.latlng).addTo(map).bindPopup(result.address.Match_addr).openPopup();
            })

        }else{
            latitude = lat.value
            longitude = long.value
            geocodeService.reverse().latlng([latitude,longitude]).run(function(error,result){
            if(error){
                return
            }
            address.value  = result.address.Match_addr
            // L.marker(result.latlng).addTo(map).bindPopup(result.address.Match_addr).openPopup();
            })
           
        }
        const mymap = L.map('mapid').setView([latitude, longitude], 15);
        let marker = L.marker([latitude, longitude],{draggable: true}).addTo(mymap)
        marker.setLatLng([latitude,longitude])

        marker.on('dragend', function (e) {
          latitude = marker.getLatLng().lat
          longitude = marker.getLatLng().lng
          console.log(latitude)
          console.log(longitude)
          document.getElementById('latitude').value = marker.getLatLng().lat;
          document.getElementById('longitude').value = marker.getLatLng().lng;
          geocodeService.reverse().latlng([latitude,longitude]).run(function(error,result){
            if(error){
                return
            }
            console.log(result.address.Match_addr)
            marker.bindPopup(result.address.Match_addr).addTo(mymap).openPopup()
            document.getElementById('coordress').value = result.address.Match_addr
            // L.marker(result.latlng).addTo(map).bindPopup(result.address.Match_addr).openPopup();
            })
        });
        const attribution = '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        const tileUrl = 'https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png'
        const tiles = L.tileLayer(tileUrl,{attribution})
        tiles.addTo(mymap)
    }
    function error(err) {
    console.warn(`ERROR(${err.code}): ${err.message}`);
    }
    const options = {
        enableHighAccuracy: true,
        timeout: 5000,
        maximumAge: 0
    };
    function getLocation(){
        if(navigator.geolocation){
            navigator.geolocation.getCurrentPosition(showPosition,error,options)
        }
    }
    getLocation()
    
    
</script>


