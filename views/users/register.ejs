      <script>
        const latitude = document.querySelector('#latitude')
        const longitude = document.querySelector('#longitude')
        function getLocation(){
            if(navigator.geolocation){
                navigator.geolocation.getCurrentPosition(showPosition)
            }
        }
        function showPosition(position){
            // loca.innerHTML = "latitude:" + position.coords.latitude + "longitude:" + position.coords.longitude
            // loca.href = `http://maps.google.com/maps?z=20&t=h&q=loc:${position.coords.latitude}+${position.coords.longitude}`
            latitude.value = position.coords.latitude
            longitude.value = position.coords.longitude
        }
        getLocation()
      </script>
      <script>
        const next = document.querySelector('.nxt')
        const prev = document.querySelector('.prev')
        const submit = document.querySelector('.submit')
        const firstPages = document.querySelectorAll('.first-page')
        const secondPages = document.querySelectorAll('.second-page')
        
        setInterval(()=>{
            if(firstPages[0].children[1].value!=='' && 
            firstPages[1].children[1].value!=='' && 
            firstPages[2].children[1].value!=='' &&
            firstPages[3].children[1].value!=='' &&
            firstPages[4].children[1].value!==''){
                next.disabled = false
            }
            else{
                next.disabled = true
            }
            
        },1000)
        next.addEventListener('click',()=>{
            for(let i=0; i<firstPages.length; i++){
                
                submit.style.display='inline'
                next.style.display='none'
    
                firstPages[i].style.display ='none'
                secondPages[i].style.display ='inline'
            }
        })
        const password = document.querySelector('#password'),
            cpassword = document.querySelector('#cpassword')
            const username = document.querySelector('#username'),
            form = document.querySelector('form')
            cpassword.addEventListener('keyup',(e)=>{
    
            if(cpassword.value==password.value){
                cpassword.setCustomValidity('')
            }
            else{
                cpassword.setCustomValidity('Passwords do not match')
            }
                cpassword.reportValidity()
            })
    
        
    </script>
