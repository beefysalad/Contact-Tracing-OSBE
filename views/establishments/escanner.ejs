<style>
    .cont{
        display: flex;
        align-items: center;
    }
    /* .testz{
            width: 600px;
            height: 500px;
    } */  
    
    #preview{
        position: relative;
        min-width: 100%;
        max-height: inherit;
        width: 100%;
        /* height: 400px; */
        /* background-color: coral; */
        margin: 0 auto;
    }
    
    /* .v{
        height: 98vh;
    } */
    .image-container{
        max-width: inherit;
        max-height: inherit;
        width: 100%;
        height: 350px;
        border: 1px solid black;
    }
    .u-pic{
        width: 100%;
        max-height: inherit;
        height: 100%;
    }
    .u-info{
        height: 100%;
        align-self: center;
        /* margin: 0 auto; */
     }
    .test{
        width: 20px;
        height: 20px;
        border-radius: 50%;
    }
    .test2{
        width: 30px;
        height: 30px;
        border-radius: 50%;
    }

    
    @media (max-width: 570px){
        .cont{
            width:450px;
            
            
        }
        #preview{
            width: 250px;
        }
    }

    @media (max-width: 500px){
        .cont{
            width:300px;
        }
        .u-info{
            height:400px;
        }
        /* #c{
            height: 300px;
        }    */
        #preview{
            width: 200px;
        }
        .image-container{
            height: 150px;
        }
    }
</style>
<link rel="stylesheet" href="/styles.css">
</head>
