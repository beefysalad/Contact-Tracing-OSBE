        <div id="layoutSidenav_content">
            <div style="display:none;" class="cam_num"><%=cam_num %></div>
            <main>
                <div class="container-fluid px-5">
                    <div class="row cont">
                        <div class="col-md-8 mt-5">
                            <div class="card bg-dark" id="c">
                                <div class="card-header text-white">
                                   <i class="fas fa-camera me-1"></i>
                                   <span>Scanning QR Code</span> 
                                </div>
                                <div class="card-body bg-light">
                                    <video id="preview" class="vidz"></video>
                                    <label for=""></label>
                                    <label id="qrt" class="form-label text-dark" for="qrText">Users Unique ID</label>
                                    <form action="/give-qr/<%=cam_num%> " method="POST" id="uniqueid">
                                        <input type="text" name="qrText" id="qrText" class="form-control" readonly required>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mt-5">
                            <div class="card bg-dark u-info">
                                <div class="card-header text-white">
                                   <i class="fas fa-table me-1"></i>
                                   <span>User Details</span> 
                                </div>
                                <div class="card-body bg-light">
                                    <% if (messages.success) { %>
                                        <h2 class="text-center display-5" style="text-transform: uppercase;">Welcome!</h2>
                                    <% } else if(messages.error) { %>
                                        <h2 class="text-center display-5 text-danger" style="text-transform: uppercase;">User does not exist!</h2>
                                    <% } else { %>
                                        <!-- <h2 class="text-center display-5" style="text-transform: uppercase;">Else</h2> -->
                                    <% } %>
                                    <div class="image-container">
                                        <% if (messages.info) { %>
                                            <img src="<%= messages.info %>" alt="" class="u-pic"> 
                                        <% } else if(messages.error) { %>
                                            <img src="/images/nope.jpg" alt="" class="u-pic"> 
                                        <% } else { %>
                                            <img src="/images/none.png" alt="" class="u-pic"> 
                                        <%  } %>
                                        
                                    </div>
                                    <form action="#" class="mt-2">
                                        <div class="row">
                                            <div class="col-md-6 mt-2">
                                                <% if (messages.success) { %>
                                                    <input value="<%=userDets.firstName%> <%=userDets .lastName%>" type="text" name="fullName" id="fullName" class="form-control" required readonly placeholder="Name">
                                                <% } else { %>
                                                    <input type="text" name="fullName" id="fullName" class="form-control" required readonly placeholder="Name">
                                                <% } %>
                                               
                                            </div>
                                            <div class="col-md-4 mt-2">
                                                <% if (messages.success) { %>
                                                    <input value="<%=userDets.status%>" type="text" name="status" id="status" class="form-control" placeholder="status" required readonly>
                                                <% } else { %>
                                                    <input type="text" name="status" id="status" class="form-control" placeholder="Status" required readonly>
                                                <% } %>
                                                
                                            </div>
                                            <div class="col-md-2 mt-2">
                                                <% if (messages.success) { %>
                                                    <input value="<%=age%> " type="text" name="age" id="age" class="form-control" placeholder="Age" required readonly>
                                                <% } else { %>
                                                    <input type="text" name="age" id="age" class="form-control" placeholder="Age" required readonly>
                                                <% } %>
                                               
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                
            </main>
            <footer class="py-4 bg-light mt-3">
                <!-- <%- include('../partials/footer') %> -->
            </footer>
        </div>
    </div>
    
    
   

