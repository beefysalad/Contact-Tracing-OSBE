                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <div class="card mt-5">
                        <div class="card-header bg-dark text-light">
                            <i class="fa-solid fa-map"></i> User Settings
                        </div>
                        <div class="card-body">
                            <!-- action="/client-profile/edit?_method=PATCH" method="POST" -->
                            <form action="/establishments-account-setting?_method=PATCH" method="POST">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-4 mt-2">
                                            <label for="businessNo" class="form-label">Business No.</label>
                                            <input value="<%=user.businessnumber%>" readonly type="text" name="businessNo" id="businessNi" class="form-control">
                                        </div>
                                        <div class="col-md-4 mt-2">
                                            <label for="contactPerson" class="form-label">Contact Person</label>
                                            <input type="text" name="contactPerson" id="contactPerson" readonly class="form-control" value="<%=user.contactPerson%>">
                                        </div>
                                        <div class="col-md-4 mt-2">
                                            <label for="contactNumber" class="form-label">Contact Number</label>
                                            <input type="text" name="contactNumber" id="contactNumber" readonly class="form-control" value="<%=user.contactNumber%>">
                                        </div>
                                        <div class="col-md-4 mt-2">
                                            <label for="emailAddress" class="form-label">Email Address</label>
                                            <input type="text" name="emailAddress" id="emailAddress" class="form-control" readonly value="<%=user.email%>">
                                        </div>
                                        <div class="col-md-4 mt-2">
                                            <% if (messages.error) { %>
                                                <label for="currentPassword" class="form-label text-danger">Current Password is incorrect!</label>
                                            <% } else {%>
                                                <label for="currentPassword" class="form-label">Current Password</label>
                                            <% } %>
                                            <input type="password" name="currentPassword" id="currentPassword" class="form-control">
                                        </div>
                                        <div class="col-md-4 mt-2">
                                            <label for="newPassword" class="form-label">New Password</label>
                                            <input type="password" name="newPassword" id="newPassword" disabled class="form-control" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="container">
                                    <hr>
                                </div>
                                <div class="button-flex mt-2 container">
                                    <button class="btn btn-dark">Submit</button>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                    
                </div>

            </main>
            <footer class="py-4 bg-light mt-3">
               
            </footer>
        </div>
    </div>

   
    
<script>
    const password = document.querySelector('#currentPassword')
    setInterval(()=>{
        // console.log(image.value);
        
        if(password.value!==''){
          document.querySelector('#newPassword').disabled = false
        }else{
          document.querySelector('#newPassword').disabled = true
        }
    },1000)
</script>

</body>
</html>


