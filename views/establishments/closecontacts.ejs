    <%- include('../partials/scripts') %> 
    <script>
        const codes = ['ABCD','EFGH','JKLM']
        const codebutton = document.querySelector('#codebutton')
        const error = document.querySelector('.invalid-code')
        const hidden = document.querySelector('#hidden-but')
        const change = document.querySelector('#change')
        const unhide = document.querySelectorAll('.hidden-change')
        codebutton.addEventListener('click',(e)=>{
        // e.preventDefault()
        // alert("HELLO")
        
        for(let i=0; i<codes.length; i++){
            if(code.value===codes[i]){
                // alert("YEY")
                for(let x=0; x<3; x++){
                    unhide[x].classList.remove('hidden-change')
                    change.style.display = 'none'
                    console.log('nisud')
                }
                hidden.click()
                break
            }
            else{
                error.classList.remove('invalid-code')
                setInterval(()=>{
                    error.classList.add('invalid-code')
                },3000)
                break
            }
        }
        })
        unhide[2].addEventListener('click',()=>{
            for(let i=0; i<3; i++){
                unhide[i].classList.add('hidden-change')
                change.style.display = 'inline-block'
            }
        })
    </script>
