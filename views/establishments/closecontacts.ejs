        <div id="layoutSidenav_content">
            <main>
                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="staticBackdropLabel">Contact Tracer Code</h5>
                          <!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> -->
                        </div>
                        <div class="modal-body">
                            
                          <form action="#">
                              <p class="text-danger invalid-code">Invalid Code!</p>
                              <label for="code" class="form-label">Enter a 4-digit Code</label>
                              <input type="password" name="code" id="code" class="form-control" placeholder="Code" required maxlength="4">
                              <hr>
                              <button type="button" class="btn btn-primary" id="codebutton">Submit</button>
                              <button type="button" class="btn btn-danger" id="second" data-bs-dismiss="modal">Close</button>
                              <button type="button" class="btn btn-success" id="hidden-but" data-bs-dismiss="modal" style="display: none;">Hidden</button>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                <div class="container-fluid px-4">
                    <div class="card mt-5">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Close Contacts 
                        </div>
                        <div class="card-body">
                            <table class="table table-light table-striped table-hover" id="example" style="width: 100%">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col"></th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Age</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Time in</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col"></th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Age</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Time in</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% if (temp  && arr) { %>
                                        <% for( let index = 0; index < temp.length; index++ ) { %>
                                                <!-- put condition here to check if theyre logged on the current date -->
                                                <tr>
                                                    <td class="current_logs"> <b><%= index+1 %></b> </td>
                                                    <td class="current_logs"><img class="control" src="<%=arr[index].image%>" alt=""></td>
                                                    <td class="current_logs"><a href="/establishments-user-profile/<%= arr[index]._id%>/<%=moment(temp[index].date).format('LL') %>" class="user-name"><%= arr[index].firstName %> <%= arr[index].lastName %></a></td>
                                                    <td class="current_logs"><%= moment().diff(new Date(arr[index].birthDate).toISOString(),'years') %> </td>
                                                    <% if (arr[index].status === 'Negative') { %>
                                                        <td class="current_logs text-success"><%=arr[index].status %></td>
                                                    <% } else if(arr[index].status === 'Positive') { %>
                                                        <td class="current_logs text-danger"><%=arr[index].status %></td>
                                                    <% } else if(arr[index].status === 'Close Contact') {%>
                                                        <td class="current_logs text-warning"><%=arr[index].status %></td>
                                                    <% } %>
                                                    <td class="current_logs"><%= temp[index].date %></td>
                                                    <td class="current_logs"><%= temp[index].time %> </td>
                                                </tr>
                                        <% } %>
                                    <% } %>
                                </tbody>
                            </table>
                            <% if (temp.length!==0 && arr.length !==0) { %>
                                <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop" id="change">Change Status</button>
                                <button class="btn btn-warning" onclick="ExportToExcel('xlsx')">Convert to excel</button>
                                <a href="/establishments-change-status-close-contacts/<%=moment(temp[0].date).format('LL')%>/<%=id %>" class="btn btn-primary hidden-change">Change Status</a>
                                <a href="/establishments-send-notification-close-contacts/<%=moment(temp[0].date).format('LL')%>/<%=id%>" class="btn btn-dark hidden-change">Send Notifications</a>
                                <button class="btn btn-success hidden-change">Cancel</button>
                            <% } else {%>
                                <a href="/establishments-user-profile/<%=id%>/<%=moment(new Date()).format('LL')%>" class="btn btn-warning">Back</a>
                            <% } %>
                           
                            
                        </div>
